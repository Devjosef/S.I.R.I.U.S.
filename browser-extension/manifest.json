{
  "manifest_version": 3,
  "name": "S.I.R.I.U.S. Assistant",
  "version": "1.0.0",
  "description": "S.I.R.I.U.S. productivity assistant browser extension",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "notifications"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "ws://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "S.I.R.I.U.S. Assistant"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open S.I.R.I.U.S. Assistant"
    },
    "voice_command": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Start voice command"
    }
  }
} 