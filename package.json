{
  "name": "sirius",
  "version": "1.0.0",
  "type": "module",
  "description": "Productivity integration system with Trello, Notion, Google Calendar and Pinecone connections",
  "main": "index.js",
  "scripts": {
    "prestart": "echo 'Skipping service worker generation for deployment'",
    "start": "NODE_ENV=production node --experimental-worker index.js",
    "dev": "NODE_ENV=development nodemon --experimental-worker index.js",
    "dev:file-logs": "NODE_ENV=development LOG_FILE=logs/sirius-dev.log nodemon --experimental-worker index.js",
    "local": "NODE_ENV=development node --experimental-worker index.js",
    "prod": "NODE_ENV=production LOG_FILE=logs/sirius.log LOG_LEVEL=info LOG_PRETTY_PRINT=false node --experimental-worker index.js",
    "prod:debug": "NODE_ENV=production LOG_FILE=logs/sirius-debug.log LOG_LEVEL=debug node --experimental-worker index.js",
    "test": "NODE_ENV=test node --experimental-vm-modules --experimental-worker node_modules/jest/bin/jest.js",
    "test:workers": "NODE_ENV=development node --experimental-worker tests/test-workers.js",
    "test:workers:mobile": "NODE_ENV=development IS_MOBILE=true MEMORY_LIMIT=2048 CPU_CORES=4 node --experimental-worker tests/test-workers.js",
    "test:workers:disabled": "NODE_ENV=development DISABLE_WORKERS=true node --experimental-worker tests/test-workers.js",
    "test:logger": "NODE_ENV=development node tests/test-logger.js",
    "test:logger:prod": "NODE_ENV=production node tests/test-logger.js",
    "test:logger:file": "NODE_ENV=development LOG_FILE=logs/test.log node tests/test-logger.js",
    "test:memory": "NODE_ENV=development node tests/test-memory.js",
    "test:memory:file": "NODE_ENV=development LOG_FILE=logs/memory-test.log node tests/test-memory.js",
    "test:matryoshka": "NODE_ENV=development node tests/test-matryoshka.js",
    "test:matryoshka:mobile": "NODE_ENV=development IS_MOBILE=true MEMORY_LIMIT=2048 CPU_CORES=4 node tests/test-matryoshka.js",
    "test:runtime-matryoshka": "NODE_ENV=development node tests/test-runtime-matryoshka.js",
    "test:runtime-matryoshka:mobile": "NODE_ENV=development IS_MOBILE=true MEMORY_LIMIT=2048 CPU_CORES=4 node tests/test-runtime-matryoshka.js",
    "test:voice": "NODE_ENV=development node tests/test-voice.js",
    "test:context": "NODE_ENV=development node tests/test-context.js",
    "test:autonomous": "NODE_ENV=development node tests/test-autonomous.js",
    "test:ollama": "NODE_ENV=development node tests/test-ollama.js",
    "test:phase4": "NODE_ENV=development node tests/test-phase4.js",
    "test:public-apis": "NODE_ENV=development node tests/test-public-apis.js",
    "test:real-apis": "NODE_ENV=development node tests/test-real-apis.js",
    "test:neural-interface": "NODE_ENV=development node tests/test-neural-interface.js",
    "test:spiderman-web": "NODE_ENV=development node tests/test-spiderman-web.js",
    "test:jira-auth": "NODE_ENV=development node tests/test-jira-auth.js",
    "test:jira-operations": "NODE_ENV=development node tests/test-jira-operations.js",
    "test:jira-create": "NODE_ENV=development node tests/test-jira-create-issue.js",
    "lint": "eslint .",
    "build:sw": "workbox generateSW workbox-config.js"
  },
  "keywords": [
    "productivity",
    "integration",
    "system",
    "trello",
    "notion",
    "google-calendar",
    "pinecone"
  ],
  "author": "Devjosef",
  "license": "MIT",
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "@pinecone-database/pinecone": "^2.2.2",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.1.0",
    "googleapis": "^140.0.1",
    "helmet": "^7.1.0",
    "lru-cache": "^11.0.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "pino": "^8.18.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "pino-roll": "^1.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "workbox-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
